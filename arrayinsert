#include <iostream>
#include <vector>
using namespace std;

void duplicateZeros(vector<int> &arr);
void duplicateZeros2(vector<int> &arr);
void printArray(const vector<int> arr);

int main() {
    vector <int> arr {1,0,2,3,0,4,5,0};
    //duplicateZeros(arr); //using STL insert
    duplicateZeros2(arr);
    printArray(arr);
}

void duplicateZeros(vector <int> &arr){
    for (int i {0}; i < arr.size(); ++i) {
        if (arr.at(i) == 0) {
            arr.insert(arr.begin()+i, 0);
            ++i;
        }
    }
}
void duplicateZeros2(vector <int> &arr) {
    for (int i {0}; i < arr.size(); ++i) {
        int size = arr.size()-1;
        if (arr.at(i) == 0) {
            while (size > i) {
                arr[size--] = arr[size-1];
            }
            arr.at(i+1) = 0;
            ++i;
        }
    }
}
void printArray(const vector<int> arr){
    for (int i {0}; i < arr.size()-1; ++i) {
        cout << arr.at(i) << ", ";
    }
    cout << arr.at(arr.size()-1);
}
